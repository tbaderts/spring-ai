<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Central file logging; no console appenders so MCP stdout remains clean. -->
    <property name="LOG_PATH" value="logs"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/spring-ai.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Keep 7 days of history -->
            <fileNamePattern>${LOG_PATH}/spring-ai.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Reduce noise from some verbose libraries -->
    <logger name="io.grpc" level="WARN"/>
    <logger name="io.netty" level="WARN"/>

    <!-- Local profile uses BOTH console and file logging for development -->
    <springProfile name="local">
        <logger name="org.springframework.ai.mcp" level="DEBUG"/>
        <logger name="org.example" level="DEBUG"/>
        
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>

    <!-- MCP and default profiles use ONLY file logging to keep stdout clean -->
    <springProfile name="mcp,default">
        <logger name="org.springframework.ai.mcp" level="DEBUG"/>
        <logger name="org.example" level="DEBUG"/>
        
        <root level="INFO">
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>
</configuration>
